{
  "name": "@rxliuli/markdown-it-task-lists",
  "version": "2.1.5",
  "description": "A markdown-it plugin to create GitHub-style task lists",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "test": "vitest run",
    "build": "tsup src/index.js --format esm --dts"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:rxliuli/markdown-it-task-lists.git"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "cheerio": "^1.0.0",
    "markdown-it": "^14.1.0",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "keywords": [
    "markdown",
    "markdown-it",
    "markdown-it-plugin",
    "task",
    "list",
    "todo",
    "checkbox"
  ],
